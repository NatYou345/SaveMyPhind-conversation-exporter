{
  "manifest_version": 3,
  "name": "Save my Chatbot - AI Conversation Exporter",
  "version": "2.2.23",
  "description": "ðŸš€ Export your Phind, Perplexity and MaxAI-Google search threads into markdown files!",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.phind.com/*",
    "*://*.perplexity.ai/*",
    "*://google.com/search*"
  ],
  "action": {
    "default_icon": "assets/icons/icon_disabled-500.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.phind.com/*",
        "*://*.perplexity.ai/*",
        "*://*.google.com/search*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "infos.json",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}